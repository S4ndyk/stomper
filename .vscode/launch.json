    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stomper'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stomper"
                ],
                "filter": {
                    "name": "stomper",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'stomper'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=stomper",
                    "--package=stomper"
                ],
                "filter": {
                    "name": "stomper",
                    "kind": "bin"
                }
            },
            "args": ["huffman",  "-d", "compressed"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'stomper'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=stomper",
                    "--package=stomper"
                ],
                "filter": {
                    "name": "stomper",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'libstomper'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=libstomper"
                ],
                "filter": {
                    "name": "libstomper",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}